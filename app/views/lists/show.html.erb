
  <section class="todoapp">
    <header class="header">
      <h1><%= @list.name %></h1>

      <!--  -->

      <!-- see params with above, set proper with below  -->
        <%= form_for(Item.new, url: list_items_path(@list)) do |f| %>
      <form action="/lists" method="POST">
          <%= f.text_field :description, :class => "new-todo"%>
          <%= f.submit :style => "display: none" %>
        <% end %>
      </form>
    </header>
    <section class="main">
      <ul class="todo-list">
        <% @list.items.each do |item| %>
          <li>
            <div class="view">
              <label><%= item.description %></label>
            </div>
          </li>
        <% end %>
      </ul

    </section>
    <footer class="footer" style="display: none;">
      <span class="todo-count"><strong>0</strong> items left</span>

      <button class="clear-completed" style="display: none;"></button>
    </footer>
  </section>
