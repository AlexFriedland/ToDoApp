
<%= content_tag_for :li, item_li, class: li_class_for_item(item_li) do %>
  <div class="view">

    <%= form_for([@list, item_li]) do |f| %>
      <%= f.check_box :status, :class => "toggle", :checked => item_li.complete? %>
    <% end %>

    <label><%= item_li.description %></label>
  </div>
<% end %>
