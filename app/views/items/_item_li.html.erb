
<%= li_for_item(item) do %>
  <div class="view">
    <%= form_for_item_status(item)%>
    <input class="toggle" type="checkbox" checked="'checked' if item.complete?">
    <label><%= item.description %></label>

    <%= button_to "x", list_item_path(item.list, item), method: "delete", class: "destroy" %>

  </div>
<% end %>

